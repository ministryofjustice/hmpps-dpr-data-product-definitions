{
  "id": "dpd-receptions-discharges",
  "name": "Receptions & Discharges for a date range using datamart",
  "description": "Reports associated with prisoner external movements, using datamart",
  "metadata": {
    "author": "Zahoor Hussain",
    "owner": "Michael Clarke",
    "version": "1.0.4",
    "tags": [
      "MOV0012"
    ]
  },
  "datasource": [
    {
      "id": "datamart",
      "name": "datamart"
    },
    {
      "id": "redshift_datamart",
      "name": "redshift_datamart",
      "database": "datamart",
      "catalog": "redshift_datamart",
      "connection": "federated",
      "dialect": "redshift/4"
    }
  ],
  "dataset": [
    {
      "id": "receptions-discharges",
      "name": "receptions-discharges",
      "datasource": "redshift_datamart",
      "query": "with alerts_ as ( SELECT code, prisoner_id FROM datamart.prisoner_alert where code in ('OIOM','OPPO') ), movements_ as ( SELECT DISTINCT prisoners.id as prisoner_id, prisoners.number AS prisoner_number, prisoners.establishment_id, prisoners.name AS name, prisoners.date_of_birth as date_of_birth, prisoners.nationality as nationality, prisoners.birth_place, prisoners.religion_code, sentence.effective_sentence_length, status.legal_status, movements.time AS movement_datetime, movements.direction, movements.type as movement_type, movements.origin, movements.origin_code, movements.destination, movements.destination_code, movements.reason FROM datamart.movement_movement as movements JOIN datamart.prisoner_prisoner as prisoners ON movements.prisoner = prisoners.id JOIN datamart.prisoner_sentence as sentence ON sentence.prisoner_id = prisoners.id JOIN datamart.prisoner_status as status ON status.id = prisoners.id ) SELECT prisoner_number, establishment_id, name, date_of_birth, nationality, birth_place, religion_code, effective_sentence_length, legal_status, movement_datetime, direction, movement_type, origin, origin_code, destination, destination_code, reason, case when alerts.code = 'OIOM' then 'Y' else 'N' end as alert_OIOM, case when alerts.code = 'OPPO' then 'Y' else 'N' end as alert_OPPO FROM movements_ LEFT OUTER JOIN alerts_ as alerts ON movements_.prisoner_id = alerts.prisoner_id",
      "schema": {
        "field": [
          {
            "name": "prisoner_number",
            "type": "string",
            "display": ""
          },
          {
            "name": "establishment_id",
