            "name": "destination_code",
            "type": "string",
            "display": ""
          },
          {
            "name": "reason",
            "type": "string",
            "display": ""
          },
          {
            "name": "alert_OIOM",
            "type": "string",
            "display": ""
          },
          {
            "name": "alert_OPPO",
            "type": "string",
            "display": ""
          }
        ]
      }
