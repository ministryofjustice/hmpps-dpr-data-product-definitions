{
  "id": "dpd007-alerts-report-async",
  "name": "Alerts Report (DPD007) ASYNC",
  "description": "The report returns a list of all prisoners in an establishment who have active or inactive alerts.",
  "metadata": {
    "author": "Caroline Cheston",
    "owner": "Michael Clarke",
    "version": "0.1"
  },
  "datasource": [
    {
      "id": "datamart",
      "name": "datamart"
    }
  ],
  "dataset": [
    {
      "id": "alerts-dataset",
      "name": "Alerts Dataset",
      "datasource": "datamart",
      "query": "select alert.category, alert.description, alert.status as alert_status, alert.date as start_date, alert.expiry_date as end_date, alert.comment, '00/00/00' as current_release_date from datamart.prisoner_alert as alert limit 10",
      "schema": {
        "field": [
          {
            "name": "category",
            "type": "string",
            "display": ""
          },
          {
            "name": "description",
            "type": "string",
            "display": ""
          },
          {
            "name": "alert_status",
            "type": "string",
            "display": ""
          },
          {
            "name": "start_date",
            "type": "date",
            "display": ""
          },
          {
            "name": "end_date",
            "type": "date",
            "display": ""
          },
          {
            "name": "comment",
            "type": "string",
            "display": ""
          },
          {
            "name": "current_release_date",
            "type": "string",
            "display": ""
          }
        ]
      }
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": ["${role}", "ROLE_PRISONS_REPORTING_USER"]
            }
          ]
        }
      ]
    }
  ],
  "report": [
    {
      "id": "alerts-report-async",
      "name": "Alerts Report Demo ASYNC",
      "description": "The report returns a list of all prisoners in an establishment who have active or inactive alerts.",
      "classification": "OFFICIAL",
      "version": "v0.1",
      "render": "HTML",
      "dataset": "$ref:alerts-dataset",
      "feature": [],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:category",
            "display": "Alert Category",
            "formula": "",
            "visible": "true",
            "sortable": true,
            "defaultsort": false,
            "filter": {
              "type": "select",
              "staticoptions": [
                {
                  "name": "TRUE",
                  "display": "undefined"
                }
              ]
            }
          },
          {
            "name": "$ref:description",
            "display": "Alert Description",
            "formula": "",
            "visible": "true",
            "sortable": true,
            "defaultsort": false,
            "filter": {
              "type": "select",
              "staticoptions": [
                {
                  "name": "TRUE",
                  "display": "undefined"
                }
              ]
            }
          },
          {
            "name": "$ref:alert_status",
            "display": "Alert Status",
            "formula": "",
            "visible": "true",
            "sortable": true,
            "defaultsort": false,
            "filter": {
              "type": "radio",
              "staticoptions": [
                {
                  "name": "active",
                  "display": "ACTIVE"
                },
                {
                  "name": "inactive",
                  "display": "INACTIVE"
                }
              ]
            }
          },
          {
            "name": "$ref:start_date",
            "display": "Start Date",
            "formula": "",
            "visible": "true",
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:end_date",
            "display": "End Date",
            "formula": "",
            "visible": "true",
            "sortable": true,
            "defaultsort": false
          },
          {
            "name": "$ref:comment",
            "display": "Comment",
            "formula": "",
            "visible": "false",
            "sortable": false,
            "defaultsort": false
          },
          {
            "name": "$ref:current_release_date",
            "display": "Release Date",
            "formula": "",
            "visible": "false",
            "sortable": true,
            "defaultsort": false
          }
        ]
      }
    }
  ]
}
