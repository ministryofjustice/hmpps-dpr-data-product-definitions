{
  "id": "test-report-2",
  "name": "Test Report 2",
  "description": "A report that exercises all of the front-end functionality",
  "metadata": {
    "author": "Stu Pegg",
    "owner": "Stu Pegg",
    "version": "1.2.3"
  },
  "datasource": [
    {
      "id": "redshift",
      "name": "redshift"
    }
  ],
  "dataset": [
    {
      "id": "test2",
      "name": "Test data",
      "datasource": "redshift",
      "query": "SELECT 'One' as column1, 2 as column2, 'Three' as column3, TO_DATE('2004-05-06', 'YYYY-MM-DD') as column4 UNION SELECT 'Remove' as column1, null as column2, null as column3, null as column4 UNION SELECT 'Eleven' as column1, 12 as column2, 'Thirteen' as column3, TO_DATE('2014-12-16', 'YYYY-MM-DD') as column4",
      "schema": {
        "field": [
          {
            "name": "column1",
            "type": "string"
          },
          {
            "name": "column2",
            "type": "string"
          },
          {
            "name": "column3",
            "type": "string"
          },
          {
            "name": "column4",
            "type": "date"
          }
        ]
      }
    }
  ],
  "policy": [
    {
      "id": "test-policy",
      "type": "row-level",
      "action": ["(column1 != 'Remove')"],
      "rule": [
        {
          "effect": "permit",
          "condition": []
        }
      ]
    },
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": ["${role}", "ROLE_PRISONS_REPORTING_USER"]
            }
          ]
        }
      ]
    }
  ],
  "report": [
    {
      "id": "test-variant2",
      "name": "Test Variant2",
      "description": "A report that exercises all of the front-end functionality",
      "classification": "OFFICIAL",
      "version": "1.0.0",
      "render": "HTML",
      "dataset": "$ref:test2",
      "printable": true,
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:column1",
            "display": "Column 1",
            "visible": "true",
            "sortable": true,
            "defaultsort": false,
            "filter": {
              "type": "radio",
              "mandatory": true,
              "staticoptions": [
                {
                  "name": "one",
                  "display": "One"
                },
                {
                  "name": "nothing",
                  "display": "No results"
                }
              ]
            }
          },
          {
            "name": "$ref:column2",
            "display": "Column 2",
            "visible": "true",
            "sortable": true,
            "defaultsort": false,
            "filter": {
              "type": "text",
              "mandatory": false,
              "pattern": "[a-z]*"
            }
          },
          {
            "name": "$ref:column3",
            "display": "Column 3",
            "visible": "true",
            "sortable": true,
            "defaultsort": true,
            "formula": "Formula: ${column3}",
            "filter": {
              "type": "autocomplete",
              "dynamicoptions": {
                "minimumLength": 2,
                "returnAsStaticOptions": true
              }
            }
          },
          {
            "name": "$ref:column4",
            "display": "Date",
            "formula": "",
            "visible": "true",
            "sortable": true,
            "defaultsort": true,
            "filter": {
              "type": "daterange",
              "default": "2004-01-01 - today()"
            }
          }
        ]
      }
    }
  ]
}
