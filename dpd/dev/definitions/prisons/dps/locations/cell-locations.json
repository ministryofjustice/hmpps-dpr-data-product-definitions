{
  "id": "residential-location-reports",
  "name": "Residential location reports",
  "description": "Reports on residential locations",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.0",
    "owner": "Move a prisoner team"
  },
  "datasource": [
    {
      "id": "dps_locations",
      "name": "DPS Residential locations",
      "database": "public",
      "catalog": "dps_locations",
      "connection": "federated",
      "dialect": "postgres/19"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "MANAGE_RES_LOCATIONS_OP_CAP"
              ]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "cell-details",
      "name": "List of cell details",
      "datasource": "dps_locations",
      "query": "",
      "multiphaseQuery": [
        {
          "index": 0,
          "datasource": {
            "id": "dps_locations",
            "name": "DPS Residential locations",
            "database": "public",
            "catalog": "dps_locations",
            "connection": "federated",
            "dialect": "postgres/19"
          },
          "query": "select l.id, l.prison_id, concat(l.prison_id, '-', l.path_hierarchy) as path_hierarchy, initcap(l.local_name) as local_name, l.cell_mark,\n       (CHAR_LENGTH(l.path_hierarchy) - CHAR_LENGTH(REPLACE(l.path_hierarchy, '-', ''))) / CHAR_LENGTH('-') +1 as level,\n       c.certified_normal_accommodation,\n       c.working_capacity,\n       c.max_capacity,\n       initcap(l.location_type) as location_type,\n       initcap(l.status) as status,\n       (select string_agg( distinct INITCAP(replace(uf.used_for, '_', ' ')), ',') from cell_used_for uf where l.id = uf.location_id) used_for,\n       (select string_agg( distinct INITCAP(replace(sc.specialist_cell_type, '_', ' ')), ',') from specialist_cell sc where l.id = sc.location_id) specialist_types\nfrom public.location l left join public.capacity c on l.capacity_id = c.id\nwhere l.location_type_discriminator = 'CELL' and l.status <> 'ARCHIVED'"
        },
        {
          "index": 1,
          "datasource": {
            "id": "nomis",
            "name": "NOMIS",
            "database": "DIGITAL_PRISON_REPORTING",
            "catalog": "nomis",
            "connection": "federated",
            "dialect": "oracle/11g"
          },
          "query": "SELECT al.agy_loc_id  AS prison_id,\n       al.description AS path_hierarchy,\n       count(*)       as num_of_occupants\nFROM oms_owner.agency_internal_locations al\n         JOIN oms_owner.offender_bookings ob on ob.booking_seq = 1\n    AND ob.active_flag = 'Y' and ob.living_unit_id = al.internal_location_id\nGROUP BY al.agy_loc_id, al.description"
        },
        {
          "index": 2,
          "datasource": {
            "id": "nomis",
            "name": "NOMIS",
            "database": "DIGITAL_PRISON_REPORTING",
            "catalog": "nomis",
            "connection": "federated",
            "dialect": "oracle/11g"
          },
          "query": "SELECT al.agy_loc_id AS prison_id, al.description AS prison_name FROM oms_owner.agency_locations al where al.agency_location_type = 'INST' and al.active_flag = 'Y'"
        },
        {
          "index": 3,
          "datasource": {
            "id": "athena",
            "name": "athena",
            "database": "reports",
            "catalog": "AwsDataCatalog",
            "connection": "awsdatacatalog"
          },
          "query": "SELECT id,\n       l.prison_id,\n       a.prison_name,  l.path_hierarchy,\n       local_name,\n       cell_mark,\n       level,\n       status,\n       certified_normal_accommodation,\n       working_capacity,\n       max_capacity,\n       COALESCE(num_of_occupants, 0) as num_of_occupants,\n       (case when working_capacity = 0 then max_capacity else working_capacity end) - COALESCE(num_of_occupants, 0) as spaces_available,\n       (case when COALESCE(num_of_occupants, 0) - coalesce(certified_normal_accommodation,0) > 0 then 'Y' else 'N' end) as crowded,\n       (case when COALESCE(num_of_occupants, 0) - coalesce(certified_normal_accommodation,0) > 0 then COALESCE(num_of_occupants, 0) - coalesce(certified_normal_accommodation,0) else null end) as amount_over_capacity,\n       location_type,\n       used_for,\n       specialist_types\nfrom AwsDataCatalog.reports.${table[0]} l join AwsDataCatalog.reports.${table[2]} a on a.prison_id = l.prison_id left join AwsDataCatalog.reports.${table[1]} p on p.path_hierarchy = l.path_hierarchy"
        }
      ],
      "schema": {
        "field": [
          {
            "name": "id",
            "type": "string"
          },
          {
            "name": "prison_id",
            "type": "string"
          },
          {
            "name": "prison_name",
            "type": "string"
          },
          {
            "name": "path_hierarchy",
            "type": "string"
          },
          {
            "name": "local_name",
            "type": "string"
          },
          {
            "name": "cell_mark",
            "type": "string"
          },
          {
            "name": "level",
            "type": "int"
          },
          {
            "name": "status",
            "type": "string"
          },
          {
            "name": "certified_normal_accommodation",
            "type": "int"
          },
          {
            "name": "working_capacity",
            "type": "int"
          },
          {
            "name": "max_capacity",
            "type": "int"
          },
          {
            "name": "num_of_occupants",
            "type": "int"
          },
          {
            "name": "spaces_available",
            "type": "int"
          },
          {
            "name": "crowded",
            "type": "string"
          },
          {
            "name": "amount_over_capacity",
            "type": "int"
          },
          {
            "name": "location_type",
            "type": "string"
          },
          {
            "name": "used_for",
            "type": "string"
          },
          {
            "name": "specialist_types",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "prisons",
      "name": "Prisons",
      "datasource": "athena_redshift",
      "query": "select agy_loc_id prison_id, initcap(description) prison_name FROM prisons.nomis_agency_locations al \nwhere al.agency_location_type = 'INST'\nand al.active_flag = 'Y'\norder by description",
      "schema": {
        "field": [
          {
            "name": "prison_id",
            "display": "Prison Id",
            "type": "string"
          },
          {
            "name": "prison_name",
            "display": "Prison name",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "cell-details",
      "name": "List of cell details",
      "description": "Details each cell and its capacity and attributes",
      "version": "1.0.0",
      "dataset": "$ref:cell-details",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:prison_id",
            "display": "Prison ID",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 140,
                "returnAsStaticOptions": true,
                "dataset": "prisons",
                "name": "prison_id",
                "display": "prison_name"
              }
            }
          },
          {
            "name": "$ref:prison_name",
            "display": "Prison Name",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:path_hierarchy",
            "display": "Location path",
            "formula": "make_url('https://locations-inside-prison-${env}.hmpps.service.justice.gov.uk/view-and-update-locations/${prison_id}/${id}',${path_hierarchy},TRUE)",
            "sortable": true,
            "visible": "true",
            "defaultsort": true,
            "sortorder": "ascending"
          },
          {
            "name": "$ref:local_name",
            "display": "Local name",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:cell_mark",
            "display": "Door mark",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:level",
            "display": "Level",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:certified_normal_accommodation",
            "display": "CNA",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:working_capacity",
            "display": "Working capacity",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:max_capacity",
            "display": "Max capacity",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:num_of_occupants",
            "display": "Num occupants",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:spaces_available",
            "display": "Spaces",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:crowded",
            "display": "Over-crowded",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "radio",
              "mandatory": false,
              "staticoptions": [
                {
                  "name": "Y",
                  "display": "Yes"
                },
                {
                  "name": "N",
                  "display": "No"
                }
              ]
            }
          },
          {
            "name": "$ref:location_type",
            "display": "Location type",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:used_for",
            "display": "Used for",
            "sortable": true,
            "visible": "false",
            "defaultsort": false,
            "wordwrap": "break-words"
          },
          {
            "name": "$ref:specialist_types",
            "display": "Specialist",
            "sortable": true,
            "visible": "false",
            "defaultsort": false,
            "wordwrap": "break-words"
          },
          {
            "name": "$ref:status",
            "display": "Status",
            "sortable": true,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": true,
              "default": "Active",
              "staticoptions": [
                {
                  "name": "Active",
                  "display": "Active"
                },
                {
                  "name": "Inactive",
                  "display": "Inactive"
                },
                {
                  "name": "Draft",
                  "display": "Draft"
                }
              ]
            }
          }
        ]
      },
      "destination": []
    }
  ]
}