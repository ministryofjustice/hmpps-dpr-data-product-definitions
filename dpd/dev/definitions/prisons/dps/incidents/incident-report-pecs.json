{
  "id": "incident-report-pecs",
  "name": "All incident reports (including PECS)",
  "description": "List of incidents by dates, types, status and locations including PECS incidents.",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.1",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "irs",
      "name": "replicaDataSource",
      "connection": "postgres"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__PECS"
              ]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "summary",
      "name": "All incident reports (including PECS) summary",
      "datasource": "replicaDataSource",
      "query": "SELECT id,\n       report_reference,\n       ctf.code                    as type,\n       ctf.description             as type_description,\n       status,\n       cs.description              as status_description,\n       incident_date_and_time,\n       reported_at,\n       reported_by,\n       title,\n       r.description,\n       location,\n       modified_at,\n       (select STRING_AGG(prisoner_number || ' (' || cr.description || ')', ',')\n        from prisons.incidentreporting_prisoner_involvement pi\n               join prisons.incidentreporting_constant_prisoner_role cr on pi.prisoner_role = cr.code\n        where pi.report_id = r.id) as prisoners_involved,\n       (case\n          when location in ('NORTH', 'SOUTH') then 'PECS'\n          else 'Prison' end)       as pecs_or_prison_type\nFROM prisons.incidentreporting_report r\n       join prisons.incidentreporting_constant_status cs on r.status = cs.code\n       join prisons.incidentreporting_constant_type ct on r.type = ct.code\n       join prisons.incidentreporting_constant_type_family ctf on ctf.code = ct.family_code\nWHERE status NOT IN ('DUPLICATE', 'NOT_REPORTABLE')",
      "schema": {
        "field": [
          {
            "name": "id",
            "type": "string"
          },
          {
            "name": "report_reference",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "status_description",
            "type": "string"
          },
          {
            "name": "status",
            "type": "string"
          },
          {
            "name": "incident_date_and_time",
            "type": "datetime"
          },
          {
            "name": "pecs_or_prison_type",
            "type": "string",
            "filter": {
              "type": "multiselect",
              "staticoptions": [
                {"name": "Prison","display": "Prisons"},
                {"name": "PECS","display": "PECS"}
              ]
            }
          },
          {
            "name": "location",
            "type": "string"
          },
          {
            "name": "reported_at",
            "type": "datetime"
          },
          {
            "name": "reported_by",
            "type": "string"
          },
          {
            "name": "title",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          },
          {
            "name": "modified_at",
            "type": "datetime"
          },
          {
            "name": "prisoners_involved",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "types",
      "name": "Incident Types",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM prisons.incidentreporting_constant_type_family order by sequence",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Type code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Type description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "status",
      "name": "Incident Status",
      "datasource": "replicaDataSource",
      "query": "SELECT code, description FROM prisons.incidentreporting_constant_status where code NOT IN ('DUPLICATE', 'NOT_REPORTABLE') order by sequence",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Status code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Status description",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "summary",
      "name": "All incident reports",
      "description": "List of all incidents filtered by dates, types, status and locations.",
      "version": "1.0.0",
      "dataset": "$ref:summary",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:report_reference",
            "display": "Incident number",
            "formula": "make_url('https://incident-reporting-${env}.hmpps.service.justice.gov.uk/reports/${id}',${report_reference},TRUE)",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:pecs_or_prison_type",
            "display": "PECS/Prison",
            "sortable": false,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:location",
            "display": "Location of incident",
            "sortable": false,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:type",
            "display": "Type code",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:type_description",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:status",
            "display": "Status code",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 10,
                "returnAsStaticOptions": true,
                "dataset": "status",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:status_description",
            "display": "Incident status",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:incident_date_and_time",
            "display": "Occurrence at",
            "formula": "format_date(${incident_date_and_time}, 'dd/MM/yyyy HH:mm')",
            "sortable": true,
            "type": "datetime",
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc",
            "filter": {
              "mandatory": false,
              "type": "daterange",
              "default": "today(-1,months) - today()"
            }
          },
          {
            "name": "$ref:reported_at",
            "formula": "format_date(${reported_at}, 'dd/MM/yyyy')",
            "display": "Reported on",
            "sortable": true,
            "type": "date",
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:title",
            "display": "Incident title",
            "sortable": false,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:description",
            "display": "Incident description",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "wordwrap": "break-words"
          },
          {
            "name": "$ref:reported_by",
            "display": "Reported by",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "text"
            }
          },
          {
            "name": "$ref:modified_at",
            "display": "Last Updated",
            "formula": "format_date(${modified_at}, 'dd/MM/yyyy HH:mm')",
            "type": "date",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:prisoners_involved",
            "display": "Prisoners involved",
            "sortable": false,
            "visible": "true",
            "defaultsort": false
          }
        ]
      },
      "destination": []
    }
  ]
}
