{
  "id": "incident-report",
  "name": "Incident report summary",
  "description": "List of all incidents filtered by dates, types, status and locations.",
  "metadata": {
    "author": "Michael Willis",
    "version": "1.0.0",
    "owner": "Managing Safety"
  },
  "datasource": [
    {
      "id": "athena_redshift",
      "name": "athena_redshift_federated",
      "database": "datamart",
      "catalog": "redshift_datamart",
      "connection": "federated",
      "dialect": "redshift/4"
    }
  ],
  "policy": [
    {
      "id": "access",
      "type": "access",
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "match": [
                "${role}",
                "INCIDENT_REPORTS__RO",
                "INCIDENT_REPORTS__RW",
                "INCIDENT_REPORTS__APPROVE"
              ]
            }
          ]
        }
      ]
    },
    {
      "id": "caseloads",
      "type": "row-level",
      "action": ["prison_id IN (${caseloads})"],
      "rule": [
        {
          "effect": "permit",
          "condition": [
            {
              "exists": ["${caseloads}"]
            }
          ]
        }
      ]
    }
  ],
  "dataset": [
    {
      "id": "summary",
      "name": "Incident report summary",
      "datasource": "athena_redshift",
      "query": "SELECT r.id,\n       report_reference,\n       ctf.code                    as type,\n       ctf.description             as type_description,\n       r.status,\n       cs.description as status_description,\n       incident_date_and_time,\n       reported_at,\n       reported_by,\n       r.title,\n       r.description,\n       location                    as prison_id,\n       modified_at,\n       el.description as prison_name,\n       el.noms_region_code         as region_code,\n       area.description            as region_name\nFROM prisons.incidentreporting_report r\n         join prisons.incidentreporting_constant_status cs on r.status = cs.code\n         join prisons.incidentreporting_constant_type ct on r.type = ct.code\n         join prisons.incidentreporting_constant_type_family ctf on ctf.code = ct.family_code\n         join prisons.nomis_agency_locations el on el.agy_loc_id = r.location and el.agency_location_type = 'INST'\n         join prisons.nomis_areas area on area.area_class = 'REGION' and area.area_code = el.noms_region_code\nWHERE r.status NOT IN ('DUPLICATE', 'NOT_REPORTABLE') and date(r.incident_date_and_time) >= (SELECT START_DATE from prompt_) and date(r.incident_date_and_time) <= (SELECT END_DATE from prompt_)",
      "parameters": [
        {
          "index": 0,
          "name": "start_date",
          "filterType": "date",
          "reportFieldType": "date",
          "display": "Enter Incident Date (Start)",
          "description": "",
          "mandatory": "true"
        },
        {
          "index": 1,
          "name": "end_date",
          "filterType": "date",
          "reportFieldType": "date",
          "display": "Enter Incident Date (End)",
          "description": "",
          "mandatory": "true"
        }
      ],
      "schema": {
        "field": [
          {
            "name": "id",
            "type": "string"
          },
          {
            "name": "report_reference",
            "type": "string"
          },
          {
            "name": "type",
            "type": "string"
          },
          {
            "name": "type_description",
            "type": "string"
          },
          {
            "name": "status_description",
            "type": "string"
          },
          {
            "name": "status",
            "type": "string"
          },
          {
            "name": "incident_date_and_time",
            "type": "datetime"
          },
          {
            "name": "prison_id",
            "type": "string"
          },
          {
            "name": "prison_name",
            "type": "string"
          },
          {
            "name": "region_code",
            "type": "string"
          },
          {
            "name": "region_name",
            "type": "string"
          },
          {
            "name": "reported_at",
            "type": "datetime"
          },
          {
            "name": "reported_by",
            "type": "string"
          },
          {
            "name": "title",
            "type": "string"
          },
          {
            "name": "description",
            "type": "string"
          },
          {
            "name": "modified_at",
            "type": "datetime"
          }
        ]
      }
    },
    {
      "id": "types",
      "name": "Incident Types",
      "datasource": "athena_redshift",
      "query": "SELECT code, description FROM prisons.incidentreporting_constant_type_family",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Type code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Type description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "status",
      "name": "Incident Status",
      "datasource": "athena_redshift",
      "query": "SELECT code, description FROM prisons.incidentreporting_constant_status where code NOT IN ('DUPLICATE', 'NOT_REPORTABLE')",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Status code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Status description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "regionCodes",
      "name": "Region Codes",
      "datasource": "athena_redshift",
      "query": "select area_code as code, description from prisons.nomis_areas where area_class = 'REGION' and active_flag = 'Y' order by description",
      "schema": {
        "field": [
          {
            "name": "code",
            "display": "Code",
            "type": "string"
          },
          {
            "name": "description",
            "display": "Description",
            "type": "string"
          }
        ]
      }
    },
    {
      "id": "prisons",
      "name": "Prisons",
      "datasource": "athena_redshift",
      "query": "select agy_loc_id prison_id, initcap(description) prison_name FROM prisons.nomis_agency_locations al \nwhere al.agency_location_type = 'INST'\nand al.active_flag = 'Y'\norder by description",
      "schema": {
        "field": [
          {
            "name": "prison_id",
            "display": "Prison Id",
            "type": "string"
          },
          {
            "name": "prison_name",
            "display": "Prison name",
            "type": "string"
          }
        ]
      }
    }
  ],
  "report": [
    {
      "id": "summary",
      "name": "Incident report summary",
      "description": "List of all incidents filtered by dates, types, status and locations.",
      "version": "1.0.0",
      "dataset": "$ref:summary",
      "policy": [],
      "render": "HTML",
      "feature": [
        {
          "type": "print"
        }
      ],
      "specification": {
        "template": "list",
        "field": [
          {
            "name": "$ref:report_reference",
            "display": "Report Reference",
            "formula": "make_url('https://incident-reporting-${env}.hmpps.service.justice.gov.uk/reports/${id}',${report_reference},TRUE)",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:prison_id",
            "display": "Prison",
            "sortable": true,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 140,
                "returnAsStaticOptions": true,
                "dataset": "prisons",
                "name": "prison_id",
                "display": "prison_name"
              }
            }
          },
          {
            "name": "$ref:prison_name",
            "display": "Prison name",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:region_code",
            "display": "Region",
            "sortable": true,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 140,
                "returnAsStaticOptions": true,
                "dataset": "regionCodes",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:region_name",
            "display": "Region name",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:type",
            "display": "Type",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 60,
                "returnAsStaticOptions": true,
                "dataset": "types",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:type_description",
            "display": "Incident type",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:status",
            "display": "Status",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "filter": {
              "type": "multiselect",
              "mandatory": false,
              "dynamicoptions": {
                "maximumOptions": 10,
                "returnAsStaticOptions": true,
                "dataset": "status",
                "name": "code",
                "display": "description"
              }
            }
          },
          {
            "name": "$ref:status_description",
            "display": "Incident status",
            "sortable": true,
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:incident_date_and_time",
            "display": "Occurrence at",
            "formula": "format_date(${incident_date_and_time}, 'dd/MM/yyyy HH:mm')",
            "sortable": true,
            "type": "datetime",
            "visible": "true",
            "defaultsort": true,
            "sortdirection": "desc"
          },
          {
            "name": "$ref:reported_at",
            "formula": "format_date(${reported_at}, 'dd/MM/yyyy')",
            "display": "Reported on",
            "sortable": true,
            "type": "date",
            "visible": "true",
            "defaultsort": false
          },
          {
            "name": "$ref:title",
            "display": "Incident title",
            "sortable": false,
            "visible": "false",
            "defaultsort": false
          },
          {
            "name": "$ref:description",
            "display": "Incident description",
            "sortable": false,
            "visible": "false",
            "defaultsort": false,
            "wordwrap": "break-words"
          },
          {
            "name": "$ref:reported_by",
            "display": "Reported by",
            "sortable": true,
            "visible": "true",
            "defaultsort": false,
            "filter": {
              "type": "text"
            }
          },
          {
            "name": "$ref:modified_at",
            "display": "Last Updated",
            "formula": "format_date(${modified_at}, 'dd/MM/yyyy HH:mm')",
            "type": "date",
            "sortable": true,
            "visible": "false",
            "defaultsort": false
          }
        ]
      },
      "destination": []
    }
  ]
}